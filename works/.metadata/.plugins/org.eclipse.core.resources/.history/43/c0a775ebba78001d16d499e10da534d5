		t4.setColumns(10);
		t4.setBounds(167, 139, 242, 21);
		contentPane.add(t4);
		
		t5 = new JTextField();
		t5.setColumns(10);
		t5.setBounds(167, 169, 242, 21);
		contentPane.add(t5);
		
