		lblCourseScore.setBounds(25, 172, 137, 15);
		contentPane.add(lblCourseScore);
		
		JButton btnGoMain = new JButton("<- BACK");
		btnGoMain.setFont(new Font("±¼¸²", Font.BOLD, 12));
		btnGoMain.setBounds(25, 207, 185, 23);
