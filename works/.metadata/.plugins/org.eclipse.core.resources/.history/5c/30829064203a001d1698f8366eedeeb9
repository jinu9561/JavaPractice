		System.out.println();

//===============================================================================
		
		System.out.println("Q ");
		System.out.println();

//===============================================================================
		
		System.out.println("Q ");
		System.out.println();

//===============================================================================
		
		System.out.println("Q ");
		System.out.println();

//===============================================================================
		
		System.out.println("Q ");
		System.out.println();

//===============================================================================
		
				
		
		
		
		sc.close();
