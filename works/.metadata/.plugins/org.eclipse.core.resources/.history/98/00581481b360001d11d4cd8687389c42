import java.util.Date;

public class StopWatch {

	private long startTime;
	private long endTime;
	
	public void start() {
		Date date = new Date();
		long timeMilli = date.getSeconds();
		
		startTime = timeMilli;
	}
	
	public void stop() {
		Date date = new Date();
		long timeMilli = date.getSeconds();
		
		endTime = timeMilli; 
	}
	
	public long getElapsedTime() {
		return endTime - startTime;
		
	}
	
}
